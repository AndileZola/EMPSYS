</div>

<script>
		$RoleId = 1;
    var empData = new DevExpress.data.CustomStore({
        key: "employeeId",
        load: function (loadOptions) {
            return $.ajax({
                url: "/api/GetEmployees",
                method: "GET"
            });
        },
